<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  
  <!--log4net Config-->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <!--Yahoo!  port: 587 | 465-->
  <!--GMail:  port: 587 | 465-->
  <!--Yandex: port: 465 | 25-->
  <system.net>
    <mailSettings>
      <smtp deliveryMethod="Network" from="demon.sender@yandex.com">
        <network
          host="smtp.yandex.com"
          port="25"
          userName="demon.sender@yandex.com"
          password="meTeraNG"
          enableSsl="true"
          defaultCredentials="false"/>
      </smtp>
    </mailSettings>
  </system.net>

  <!--Config Aplication-->
  <appSettings>
    <!--The directory, where located files / Source-->
    <add key="SourceDirectory"  value="C:\Program Files (x86)\nikifovadim@yandex.com\Extraction Service\docs"/>
    <!--The directory for copy files / Destination-->
    <add key="TargetDirectory"  value="C:\Program Files (x86)\nikifovadim@yandex.com\Extraction Service\outputs"/>
    <!--Sets of an interval in the minutes-->
    <add key="Interval"         value="1"/>
    <!--E-mail Addresses-->
    <add key="Recipients"       value="nikifovadim@yandex.com"/>
  </appSettings>

  <log4net>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Program Files (x86)\nikifovadim@yandex.com\FileWatcher Service\logs\application.log" />
      <appendToFile value="true" />
      <encoding value="utf-8" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="3" />
      <maximumFileSize value="512KB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="Level - %level%newlineUTC Date - %utcdate{ABSOLUTE}, Date - %date{ABSOLUTE}%newlineMessage: %newline%message"/>
      </layout>
    </appender>

    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />
      <!--<appender-ref ref="FileAppender" />-->
    </root>
  </log4net>

</configuration>
